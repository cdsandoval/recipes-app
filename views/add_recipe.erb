<h1>New Recipe</h1>
<hr />
<form action="">
  <label for="">Name</label>
  <input type="text" name="name" />
  <br />
  <label for="">Difficulty</label>
  <select name="difficult" id="">
    <option disabled="disabled" selected="selected" value="">Choose an option</option>
    <option value="easy">Easy</option>
    <option value="medium">Medium</option>
    <option value="hard">Hard</option>
  </select>
  <br />
  <label for="">Duration time</label>
  <input type="text" value="" placeholder="00:00" />
  <br />
  <label for="">Url's image</label>
  <input type="text" placeholder="Paste the image's URL">
  <br />
  <label for="">Preparation</label>
  <br />
  <textarea name="" id="" cols="30" rows="10" placeholder="Recipes's preparation"></textarea>
  <br />
  <input type="submit" value="save">
</form>

<h1>Upload Image</h1>
  <form action="/save_image" method="POST" enctype="multipart/form-data">
      <input type="file" name="file">
      <input type="submit" value="Upload image" >
  </form>