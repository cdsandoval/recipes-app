<div class="list-recipe">
  <h1 class="title">New Recipe</h1>
  <form action="/add-recipe" method="POST" enctype="multipart/form-data">
    <input class="input" type="hidden" name="id_user" value=<%= @id_user %> />
    <div class="input-block">
      <label class="label" for="">Name recipe</label>
      <input class="input" type="text" name="name" maxlength="80" required/>
    </div>
    <div class="input-block">
      <label class="label" for="">Difficulty</label>
      <select class="input" name="difficult" id="" required>
        <option disabled="disabled" selected="selected" value="">Choose an option</option>
        <option value="1">Easy</option>
        <option value="2">Medium</option>
        <option value="3">Hard</option>
      </select>
    </div>
    <div class="input-block">
      <label class="label" for="">Quality</label>
      <select class="input" id="calidad" name="qualitly" required>
        <option value="" disabled="disabled">---Enter your quality--</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>
    <div class="input-block">
      <label class="label" for="">Duration time in minutes</label>
      <input class="input" type="number" name="duration_time" value="" placeholder="How many minutes?" required/>
    </div>
    <div class="input-block">
      <label class="label" for="">Â¿How many steps need your recipe?</label>
      <input class="input" type="number" name="steps" value="" placeholder="Steps" required maxlength="10" />
    </div>
    <div class="input-block">
      <input class="button" type="submit" value="Continuar">
    </div>
  </form>
</div>
