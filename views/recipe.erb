 <% @recipes.each do |recipe| %>
   <h1><%= recipe["name"] %></h1>
    <form action="/recipe-quality" method="POST">
   --- CALIDAD:
    <select id="quality" name="quality">
      <option value="">--Pon tu calidad--</option>
      <option value="1" <% if recipe["quality"]== 1 %>selected<% end %>>1</option>
      <option value="2" <% if recipe["quality"]== 2 %>selected<% end %>>2</option>
      <option value="3" <% if recipe["quality"]== 3 %>selected<% end %>>3</option>
    </select>
    <input type="hidden" name="id" value="<%=recipe["id"]%>">
    <input type="submit">
    </form>

   <form action="/recipe-difficulty" method="POST">
   --- DIFICULTAD:
    <select id="dificultad" name="difficulty">
      <option value="">--Pon tu nivel de dificultad--</option>
      <option value="easy" <% if recipe["difficult"]== "easy" %>selected<% end %>>Easy</option>
      <option value="medium" <% if recipe["difficult"]== "medium" %>selected<% end %>>Medium</option>
      <option value="hard" <% if recipe["difficult"]== "hard" %>selected<% end %>>Hard</option>
    </select>
    <input type="hidden" name="id" value="<%=recipe["id"]%>">
    <input type="submit">
    </form>
   <p>TIEMPO: <%= recipe["duration_time"]%> minutos</p>
   <p>PREPARACION: <%= recipe["preparation"] %></p>
   <img src = "<%= recipe["url_image"] %>">
 <% end %>
